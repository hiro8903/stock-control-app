<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :name, class: "label-login" %>
      <% if @user.present? %>
        <%= f.collection_select :id, @users, :id, :name, { include_blank: "選択してください", selected: @user.id }, class: 'form-control'%>
      <% else %>
        <%= f.collection_select :id, @users, :id, :name, { include_blank: "選択してください", selected:"" }, class: 'form-control'%>
      <% end %>
      <%= f.label :password, class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>
      ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %>
    </p>
  </div>
</div>